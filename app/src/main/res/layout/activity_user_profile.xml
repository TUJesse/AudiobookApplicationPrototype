<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".UserProfile">

    <Button
        android:id="@+id/booksCompleted"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/changeEmail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Books Completed"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bookmarkedBooks"
        android:layout_below="@+id/booksCompleted"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/book_mark_books"
        android:text="Bookmarked Books"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userInfo"
        android:text="Your Profile"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/profileIcon"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userEmail"
        android:text="Your email: "
        android:textSize="20sp"
        android:gravity="left"
        android:layout_below="@+id/userInfo"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changeEmail"
        android:text="Change your email address"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_below="@+id/userEmail"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/quizResults"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/quiz_results"
        android:text="Quiz Results"
        android:layout_below="@+id/bookmarkedBooks"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img"
        android:id="@+id/profileIcon"
        android:layout_centerHorizontal="true"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsIcon"
        android:src="@drawable/ic_baseline_settings_24"
        android:layout_alignParentRight="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:id="@+id/navBar"
        android:layout_alignParentBottom="true"
        app:menu="@menu/nav_menu_bar"/>




</RelativeLayout>