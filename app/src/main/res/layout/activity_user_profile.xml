<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".UserProfile">

    <Button
        android:id="@+id/booksCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changeEmail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Books Completed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookmarkedBooks"
        android:layout_below="@+id/booksCompleted"
        android:text="Bookmarked Books"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userInfo"
        android:text="Your Profile"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/profileIcon"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userEmail"
        android:text="Your email: "
        android:textSize="20sp"
        android:gravity="left"
        android:layout_below="@+id/userInfo"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changeEmail"
        android:text="Click to change email address "
        android:textSize="20sp"
        android:gravity="left"
        android:layout_below="@+id/userEmail"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quizResults"
        android:text="Quiz Results"
        android:layout_below="@+id/bookmarkedBooks"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img"
        android:id="@+id/profileIcon"
        android:layout_centerHorizontal="true"

        />




</RelativeLayout>